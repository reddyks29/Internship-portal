<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SuccessCheckingActivity"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Applicant Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="28sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applicant Name:"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/blue"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:textColor="@color/black"
                android:text="Phone"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textColor="@color/black"
                android:text="Email"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/blue"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dob"
                android:text="DOB"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opening"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opening"
                android:text="Opening Name"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Position:"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/blue"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/job_position"
                android:text="Job Position"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/blue"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/year"
                android:text="Graduation Year"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Institution:"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/c"
                android:text="Institution"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textColor="@color/black"
                android:text="Status"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/black"
                android:text="Description"
                android:gravity="fill_horizontal"
                android:padding="10dp"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insight"
                android:padding="5dp"
                android:background="@drawable/textbox_background"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/blue"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insight"
                android:text="Insight"
                android:textColor="@color/black"
                android:gravity="fill_horizontal"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/viewResume"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="View Resume"
                android:textSize="25sp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_weight="1"
                    android:id="@+id/accept"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:background="#111111"
                    android:textSize="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:id="@+id/reject"
                    android:layout_weight="1"
                    android:layout_marginLeft="80dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:background="#111111"
                    android:textSize="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>